<script src="~/Scripts/js/fileinput.min.js"></script>
<!-- bootstrap.js below is only needed if you wish to the feature of viewing details
     of text file preview via modal dialog -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" type="text/javascript"></script>
<!-- optionally if you need translation for your language then include
    locale file as mentioned below -->
<script src="~/Scripts/js/fileinput_locale_fr.js"></script>

<form method="post" enctype="multipart/form-data">
    <input id="input-705" name="kartik-input-705[]" type="file" multiple class="file-loading">
</form>

<script>
    var $input = $("#input-705");
    $input.fileinput({
        uploadUrl: "http://localhost:57430/User/AddOrEditMyAnnonce/Upload", // server upload action
        uploadAsync: false,
        showUpload: false, // hide upload button
        showRemove: false, // hide remove button
        minFileCount: 1,
        maxFileCount: 5
    }).on("filebatchselected", function (event, files) {
        // trigger upload method immediately after files are selected
        $input.fileinput("upload");
    });
</script>


