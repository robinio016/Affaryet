@model IEnumerable<VientVendreMVC.Areas.User.Models.ProductViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Photos
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td valign="middle">
                <a href="@Url.Action("Index","ProductInfo", new { id=item.ProductID})">
                @{
                    if (item.im != null)
                    {
                        var base64 = Convert.ToBase64String(item.im);
                        var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@imgSrc" class="img-thumbnail" width="100" height="100" />
                    }



                }
                    </a>
            </td>

            <td valign="middle">
                <a href="@Url.Action("Index","ProductInfo", new { id=item.ProductID})">@item.ProductName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductPrice)
            </td>
            <td valign="middle">
                @Html.DisplayFor(modelItem => item.Description)
            </td>

        </tr>
                    }

</table>

@{
    double TotalPage = ViewBag.TotalPages;
}


<nav>
    <ul class="pagination">
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        <li class="page-item active">
            <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
        </li>
        @for (int i = 1; i <= TotalPage; i++)
        {
            <li>@Html.ActionLink(i.ToString() + " ", "Index", new { Page = i }, new { @Class = "page-item" })</li> //you need to get region id
        }
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>